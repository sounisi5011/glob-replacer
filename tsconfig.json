{
  "compilerOptions": {
    // Node 8.3+ supports almost all the features of ES2017.
    // Reference: https://node.green/#ES2017
    "target": "ES2017",
    "types": [],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "newLine": "LF",
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["./src/**/*"]
}
